<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
   >

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="@dimen/MapUpLineHei"
        android:orientation="horizontal"
        >
        <TextView
            android:background="#c9c8c8"
            android:textSize="@dimen/MapTextSize"
            android:text="Name"
            android:layout_width="@dimen/titleWid"
            android:layout_height="@dimen/MapUpLineHei" />
        <TextView
            android:textSize="@dimen/MapTextSize"
            android:id="@+id/mapFirstName_TV"
            android:layout_width="@dimen/MapUpLineWid"
            android:layout_height="@dimen/MapUpLineHei"
            />
        <!--<TextView-->
            <!--android:id="@+id/mapLastName_TV"-->
            <!--android:layout_width="@dimen/MapUpLineWid"-->
            <!--android:layout_height="@dimen/MapUpLineHei"-->
            <!--/>-->
        <TextView
            android:background="#c9c8c8"
            android:textSize="@dimen/MapTextSize"
            android:text="Address"
            android:layout_width="@dimen/titleWid"
            android:layout_height="@dimen/MapUpLineHei" />
        <!--<TextView-->
            <!--android:id="@+id/mapStreet_TV"-->
            <!--android:layout_width="@dimen/MapUpLineWid"-->
            <!--android:layout_height="@dimen/MapUpLineHei"-->
            <!--/>-->
        <TextView
            android:textSize="@dimen/MapTextSize"
            android:id="@+id/mapCity_TV"
            android:layout_width="@dimen/MapUpLineWid"
            android:layout_height="@dimen/MapUpLineHei"
            />


    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="@dimen/MapUpLineHei"
        android:orientation="horizontal"
        >
        <TextView
            android:background="#c9c8c8"
            android:textSize="@dimen/MapTextSize"
            android:text="Mail"
            android:layout_width="@dimen/titleWid"
            android:layout_height="@dimen/MapUpLineHei" />
        <TextView
            android:textSize="@dimen/MapTextSize"
            android:id="@+id/mapEmail_TV"
            android:layout_width="@dimen/MapLowerLinewid"
            android:layout_height="@dimen/MapLowerLineHei"
            />
        <TextView
            android:background="#c9c8c8"
            android:textSize="@dimen/MapTextSize"
            android:text="Phone Number"
            android:layout_width="@dimen/titleWid"
            android:layout_height="@dimen/MapUpLineHei" />
        <TextView
            android:textSize="@dimen/MapTextSize"
            android:id="@+id/mapPhoneNumber_TV"
            android:layout_width="@dimen/MapLowerLinewid"
            android:layout_height="@dimen/MapLowerLineHei"
            />




    </LinearLayout>


    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"

        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        tools:context="com.example.orazoulay.requestapplication.MapsActivity" />
</LinearLayout>


